<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/main_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:huaqing="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_gravity="right"
        android:layout_width="180dp"
        android:background="#f00"
        android:layout_height="match_parent"></FrameLayout>
    <FrameLayout
        android:layout_gravity="left"
        android:layout_width="180dp"
        android:background="#f00"
        android:layout_height="match_parent"></FrameLayout>
<!--内容区域-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.astuetz.PagerSlidingTabStrip
            huaqing:pstsIndicatorColor="#f00"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/main_tabs"></com.astuetz.PagerSlidingTabStrip>
        <android.support.v4.view.ViewPager
            android:id="@+id/main_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>



    </LinearLayout>


</android.support.v4.widget.DrawerLayout>